{# templates/emails/registration.html.twig #}
{% extends 'emails/base.html.twig' %}
{% block body %}
    <strong>You loose your password ? Get a new one !</strong>

    <h3>Hi {{ user.username }}! You can follow the link bellow to regenerate one !</h3>
    <p class="lead">
        To create a new password, go to: <a
                href="{{ url('app_reset_password', {'token' : user.token}) }}">...</a>.
    </p>
    <p class="callout">
        Thanks!
    </p>
{% endblock %}